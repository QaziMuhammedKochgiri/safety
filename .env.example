# =============================================================================
# SafeChild Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MONGO_URL=mongodb://safechild_user:YOUR_STRONG_PASSWORD_HERE@mongo:27017/safechild_db?authSource=admin
DB_NAME=safechild_db

# MongoDB Root Credentials (for initial setup only)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=YOUR_MONGO_ROOT_PASSWORD_HERE

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=GENERATE_A_64_CHARACTER_RANDOM_STRING_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Encryption (Master Key for Evidence Files)
# -----------------------------------------------------------------------------
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
SAFECHILD_MASTER_KEY=GENERATE_A_64_CHARACTER_HEX_KEY_HERE

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=https://safechild.mom,https://www.safechild.mom

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_YOUR_RESEND_API_KEY_HERE
EMAIL_FROM_NAME=SafeChild Law
EMAIL_FROM_ADDRESS=info@safechild.mom

# -----------------------------------------------------------------------------
# Payment (Stripe) - Currently mocked, configure when ready
# -----------------------------------------------------------------------------
STRIPE_API_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# -----------------------------------------------------------------------------
# Frontend URL (for email links)
# -----------------------------------------------------------------------------
FRONTEND_URL=https://safechild.mom

# -----------------------------------------------------------------------------
# Telegram Service Configuration
# -----------------------------------------------------------------------------
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=YOUR_TELEGRAM_API_ID
TELEGRAM_API_HASH=YOUR_TELEGRAM_API_HASH

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=10

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Application Mode
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false
